

<% if params[:handle] %>
 To log in as <%= @handle.name %>, sign this message:
 <pre><code><%= @claim %></code></pre>

 <pre><code>
 

echo "jshawl:<%= @session_secret %>" > /tmp/claim.txt
minisign -Sm /tmp/claim.txt
curl -F "signature=@/tmp/claim.txt.minisig" http://jshawl:<%= @session_secret %>@localhost:3000/session/proof


</code></pre>

<%= form_tag session_path do %>
    <%= hidden_field :session, :claim, value: @claim %>
    <%= submit_tag :"I did this" %>
<% end %>
<% else %>
  <%= form_tag new_session_path, method: 'GET' do %>
    <%= label_tag :handle %>:
    <%= text_field_tag :handle %>
    <%= submit_tag "Log In" %>
  <% end %>
<% end %>
